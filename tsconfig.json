{
 "compilerOptions": {
  "target": "ES2020",
  "useDefineForClassFields": true,
  "module": "ESNext",
  "lib": [
   "ES2020",
   "DOM",
   "DOM.Iterable"
  ],
  "skipLibCheck": true,
  /* Bundler mode */
  "moduleResolution": "bundler",
  "allowImportingTsExtensions": true,
  "resolveJsonModule": true,
  "isolatedModules": true,
  "noEmit": true,
  "jsx": "preserve",
  /* Linting */
  "strict": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "noFallthroughCasesInSwitch": true,
  /* Alias */
  "baseUrl": ".",
  "paths": {
   "@assets/*": [
    "src/assets/*"
   ],
   "@components/*": [
    "src/components/*"
   ],
   "@/*": [
    "src/*"
   ],
   "@src/*": [
    "src/*"
   ],
   "@pages/*": [
    "src/pages/*"
   ],
   "@router/*": [
    "src/router/*"
   ],
   "@commons/*": [
    "src/components/commons/*"
   ]
  },
  "noImplicitAny": false,
  "allowJs": true
 },
 "include": [
  "src/**/*.ts",
  "src/**/*.tsx",
  "src/**/*.vue",
  "src/components/index.ts"
 ],
 "references": [
  {
   "path": "./tsconfig.node.json"
  }
 ]
}